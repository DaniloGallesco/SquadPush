<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SquadPush.MainPage">

    <ScrollView>
        <ScrollView>
            <VerticalStackLayout
           Spacing="25"
           Padding="30,0"
           VerticalOptions="Center">

                <Label
               Text="Bem vindo!"
               SemanticProperties.HeadingLevel="Level1"
               FontSize="32"
               HorizontalOptions="Center" />
              

                <Editor
                x:Name="LblToken"
                    WidthRequest="300"
                    AutoSize="TextChanges"
               Text=""
               IsEnabled="True"               
               HorizontalOptions="Center" />

                <Button Clicked="MyPushes_Clicked" Text="My Pushes" />

                <Button Clicked="Button_Clicked" Text="Limpar" />

                <Label
       Text="Deeplink valido: DOG OUUUUU CAT"
       SemanticProperties.HeadingLevel="Level1"       
       HorizontalOptions="Center" />

                <Label
       Text="Tag do Deeplink: Click"
